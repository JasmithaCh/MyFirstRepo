# Define two strings
string1 = "Hello"
string2 = "World"

# Concatenation
concatenated = string1 + " " + string2
print("Concatenated String:", concatenated)

# String Lengths
print("Length of String 1:", len(string1))
print("Length of String 2:", len(string2))

# Upper and Lower case
print("String 1 Uppercase:", string1.upper())
print("String 2 Lowercase:", string2.lower())

# Check if strings are alphanumeric
print("Is String 1 alphanumeric?", string1.isalnum())
print("Is String 2 alphanumeric?", string2.isalnum())

# Substring Check
print("Does 'Hell' exist in String 1?", "Hell" in string1)

# Reverse the strings
print("String 1 Reversed:", string1[::-1])
print("String 2 Reversed:", string2[::-1])

